{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             /* Importante: CommonJS */
    "moduleResolution": "node",       /* Importante: Permite imports sem .js */
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "updatesSenha.ts"]
}